/* 自定义 TabBar 样式 */
.custom-tabbar {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  background: rgba(255, 255, 255, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 48rpx;
  display: flex;
  padding: 25rpx 0;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.18);
  backdrop-filter: blur(20rpx) saturate(140%);
  -webkit-backdrop-filter: blur(20rpx) saturate(140%);
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
  color: #999;
  transition: color 0.3s;
}

.tab-item.active {
  color: #0052d9;
}

.tab-item.active .tab-text {
  color: #0052d9;
  font-weight: 500;
}

.tab-text {
  font-size: 26rpx;
  color: inherit;
}
