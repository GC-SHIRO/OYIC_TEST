/**app.wxss**/

/* 预加载 TDesign 图标字体 - 在全局提前加载避免页面切换闪烁 */
@import './miniprogram_npm/tdesign-miniprogram/icon/icon.wxss';

/* 全局样式基调 - 银色灰 */
page {
  font-family: "PingFang SC", "MiSans", "Noto Sans SC", "Source Han Sans SC", sans-serif;
  background-color: #f2f3f5;
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.6;
  --bg: #f2f3f5;
  --bg-soft: #f7f7f8;
  --surface: #ffffff;
  --surface-2: #eef0f3;
  --text: #1f2937;
  --muted: #6b7280;
  --border: #e5e7eb;
  --silver-1: #f9fafb;
  --silver-2: #e5e7eb;
  --silver-3: #cbd5e1;
  --steel-1: #6b7280;
  --steel-2: #374151;
}

view, text, image, scroll-view, navigator, input, textarea, button {
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 主题色变量 */
.theme-primary {
  background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 100%);
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}