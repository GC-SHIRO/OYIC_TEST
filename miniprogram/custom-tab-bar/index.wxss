/* 自定义 TabBar 样式 */
.custom-tabbar {
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 480rpx;
  background: rgba(255, 255, 255, 0.25);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 999rpx;
  display: flex;
  padding: 12rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.18);
  backdrop-filter: blur(5rpx) saturate(140%);
  -webkit-backdrop-filter: blur(5rpx) saturate(140%);
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  transition: color 0.15s ease-in;
}

.tab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48rpx;
}
