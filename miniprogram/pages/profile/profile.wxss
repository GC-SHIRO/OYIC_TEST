/* 我的 - 用户中心页面样式 */
.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
  padding: 88rpx 32rpx 64rpx;
  color: white;
}

/* === 未登录状态 === */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0 16rpx;
}

.login-avatar-wrap {
  margin-bottom: 24rpx;
}

.login-avatar {
  opacity: 0.7;
}

.login-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 32rpx;
}

.login-btn {
  width: 400rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
  letter-spacing: 2rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.85;
}

/* === 已登录状态 === */
.user-profile {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.user-avatar {
  border: 6rpx solid white;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-signature {
  font-size: 24rpx;
  opacity: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 380rpx;
}

.edit-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 0 32rpx 0;
}

.bottom-placeholder {
  height: 200rpx;
}

/* 我的作品横向滚动 */
.section {
  margin-bottom: 48rpx;
  margin-top: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #334155;
}

.works-scroll {
  display: flex;
  white-space: nowrap;
  padding: 8rpx;
}

.work-card {
  display: inline-block;
  width: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  background: white;
  margin-right: 24rpx;
  vertical-align: top;
}

.work-card:active {
  transform: scale(0.98);
}

.work-image {
  width: 280rpx;
  height: 360rpx;
}

.work-info {
  padding: 16rpx;
}

.work-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.empty-works {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 400rpx;
  background: white;
  border-radius: 24rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 菜单列表 */
.menu-section {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f5f5f5;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.menu-subtitle {
  font-size: 26rpx;
  color: #999;
}

.menu-badge {
  margin-right: 16rpx;
}

/* 退出登录 */
.logout-icon {
  background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%) !important;
}

.logout-text {
  color: #dc2626 !important;
}

/* === 注册弹窗 === */
.register-popup {
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 48rpx calc(48rpx + env(safe-area-inset-bottom));
}

.register-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 12rpx;
}

.register-subtitle {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 48rpx;
}

.register-avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-choose-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  line-height: normal;
}

.avatar-choose-btn::after {
  border: none;
}

.register-avatar {
  border: 4rpx dashed #d9d9d9;
  border-radius: 50%;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.register-nickname-section {
  margin-bottom: 48rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.register-actions {
  display: flex;
  gap: 24rpx;
}

.register-cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 16rpx;
  border: none;
}

.register-cancel-btn::after {
  border: none;
}

.register-confirm-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: none;
}

.register-confirm-btn::after {
  border: none;
}

.register-confirm-btn:active {
  opacity: 0.85;
}
