/* 我的 - 用户中心页面样式（银色灰） */
.page-container {
  min-height: 100vh;
  background: radial-gradient(120% 120% at 20% 0%, #f7f8fa 0%, #f0f2f5 45%, #eef0f3 100%);
  display: flex;
  flex-direction: column;
  font-family: "PingFang SC", "MiSans", "Noto Sans SC", "Source Han Sans SC", sans-serif;
  color: #111827;
}

@keyframes floatUp {
  0% {
    transform: translateY(16rpx);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 用户信息头部 */
.user-header {
  position: relative;
  background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 60%, #cbd5e1 100%);
  padding: 88rpx 32rpx 36rpx;
  color: #111827;
  border-bottom-left-radius: 36rpx;
  border-bottom-right-radius: 36rpx;
  box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.08);
  overflow: hidden;
  animation: floatUp 420ms ease-out both;
}

.user-header::after {
  content: "";
  position: absolute;
  right: -120rpx;
  top: -80rpx;
  width: 360rpx;
  height: 360rpx;
  background: radial-gradient(closest-side, rgba(255, 255, 255, 0.55), rgba(255, 255, 255, 0));
}

/* === 未登录状态 === */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0 8rpx;
  position: relative;
  z-index: 1;
}

.login-avatar-wrap {
  margin-bottom: 24rpx;
}

.login-avatar {
  opacity: 0.92;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.16);
  border-radius: 50% !important;
  overflow: hidden !important;
}

.login-avatar,
.login-avatar .t-avatar,
.login-avatar .t-avatar__wrapper,
.login-avatar .t-image {
  border-radius: 50% !important;
  overflow: hidden !important;
  border: none !important;
}

.login-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
  letter-spacing: 1rpx;
}

.login-btn {
  width: 420rpx !important;
  height: 84rpx;
  line-height: 84rpx;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 42rpx;
  border: none;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.2);
  letter-spacing: 2rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.88;
}

/* === 已登录状态 === */
.user-profile {
  display: flex;
  align-items: center;
  gap: 28rpx;
  position: relative;
  z-index: 1;
}

.user-avatar {
  border: 6rpx solid rgba(255, 255, 255, 0.9) !important;
  box-shadow: 0 14rpx 36rpx rgba(17, 24, 39, 0.2) !important;
  background: rgba(255, 255, 255, 0.85) !important;
  border-radius: 50% !important;
  overflow: hidden !important;
}

.user-avatar .t-avatar,
.user-avatar .t-avatar__wrapper,
.user-avatar .t-image,
.user-avatar .t-avatar--round {
  border-radius: 50% !important;
  overflow: hidden !important;
  border: none !important;
  background: transparent !important;
}

/* 覆盖 TDesign Avatar 外层容器 */
.user-avatar::after,
.user-avatar::before {
  display: none !important;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}

.user-signature {
  font-size: 24rpx;
  color: #4b5563;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 420rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  display: inline-block;
}

.edit-btn {
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  background: rgba(75, 85, 99, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(17, 24, 39, 0.2);
}

.edit-btn:active {
  background: rgba(255, 255, 255, 0.95);
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 16rpx 0;
  margin-top: 8rpx;
}

.bottom-placeholder {
  height: 200rpx;
  padding: 0 24rpx;
}

/* 我的作品横向滚动 */
.section {
  margin-bottom: 16rpx;
  margin-top: 20rpx;
  animation: floatUp 520ms ease-out both;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
}

.section-more {
  font-size: 26rpx;
  color: #6b7280;
}

.works-scroll {
  display: flex;
  white-space: nowrap;
  padding: 36rpx 0 24rpx 0;
  margin: 0 0rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.work-card {
  display: inline-block;
  width: 280rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(17, 24, 39, 0.10);
  background: rgba(255, 255, 255, 0.95);
  margin-right: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 24rpx;
  vertical-align: top;
  transform: translateZ(0);
  transition: transform 160ms ease, box-shadow 160ms ease;
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.work-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 18rpx rgba(17, 24, 39, 0.14);
}

.work-image {
  width: 280rpx;
  height: 360rpx;
}

.work-info {
  padding: 16rpx 18rpx 18rpx;
}

.work-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-date {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 6rpx;
}

.empty-works {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 28rpx;
  border: 2rpx dashed rgba(148, 163, 184, 0.4);
}

.empty-text {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 菜单列表 */
.menu-section {
  margin: 16rpx 24rpx 48rpx;
  background: rgba(255, 255, 255, 0.94);
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(17, 24, 39, 0.08);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
  animation: floatUp 600ms ease-out both;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 30rpx 28rpx;
  border-bottom: 2rpx solid rgba(229, 231, 235, 0.8);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(243, 244, 246, 0.8);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #4b5563 0%, #374151 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(17, 24, 39, 0.15);
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 4rpx;
}

.menu-subtitle {
  font-size: 25rpx;
  color: #6b7280;
}

.menu-badge {
  margin-right: 16rpx;
}

/* 退出登录 */
.logout-icon {
  background: linear-gradient(135deg, #f3f4f6 0%, #fecdd3 100%) !important;
}

.logout-text {
  color: #9f1239 !important;
}

/* === 注册弹窗 === */
.register-popup {
  background: #ffffff;
  border-radius: 36rpx 36rpx 0 0;
  padding: 48rpx 48rpx calc(48rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -20rpx 50rpx rgba(17, 24, 39, 0.12);
}

.register-popup::before {
  content: "";
  display: block;
  width: 88rpx;
  height: 8rpx;
  border-radius: 99rpx;
  background: #e5e7eb;
  margin: 0 auto 28rpx;
}

.register-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  text-align: center;
  margin-bottom: 12rpx;
}

.register-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
  margin-bottom: 44rpx;
}

.register-avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 36rpx;
}

.avatar-choose-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  line-height: normal;
}

.avatar-choose-btn::after {
  border: none;
}

.register-avatar {
  border: 4rpx dashed #cbd5e1;
  border-radius: 50%;
  background: rgba(248, 250, 252, 0.8);
}

.avatar-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 16rpx;
}

.register-nickname-section {
  margin-bottom: 36rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background: #f3f4f6;
  border-radius: 18rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: #111827;
  box-sizing: border-box;
  border: 2rpx solid transparent;
}

.nickname-input:focus {
  border-color: rgba(107, 114, 128, 0.35);
}

.register-actions {
  display: flex;
  gap: 24rpx;
}

.register-cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 30rpx;
  border-radius: 18rpx;
  border: none;
}

.register-cancel-btn::after {
  border: none;
}

.register-confirm-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 18rpx;
  border: none;
  box-shadow: 0 14rpx 30rpx rgba(17, 24, 39, 0.2);
}

.register-confirm-btn::after {
  border: none;
}

.register-confirm-btn:active {
  opacity: 0.88;
}