/* 我的 - 用户中心页面样式 */
.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
  padding: 88rpx 32rpx 64rpx;
  color: white;
}

.user-profile {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.user-avatar {
  border: 6rpx solid white;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  opacity: 0.9;
}

.edit-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 0 32rpx 0;
}

.bottom-placeholder {
  height: 200rpx;
}

/* 我的作品横向滚动 */
.section {
  margin-bottom: 48rpx;
  margin-top: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #334155;
}

.works-scroll {
  display: flex;
  white-space: nowrap;
  padding: 8rpx;
}

.work-card {
  display: inline-block;
  width: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  background: white;
  margin-right: 24rpx;
  vertical-align: top;
}

.work-card:active {
  transform: scale(0.98);
}

.work-image {
  width: 280rpx;
  height: 360rpx;
}

.work-info {
  padding: 16rpx;
}

.work-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.empty-works {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 400rpx;
  background: white;
  border-radius: 24rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 菜单列表 */
.menu-section {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f5f5f5;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.menu-subtitle {
  font-size: 26rpx;
  color: #999;
}

.menu-badge {
  margin-right: 16rpx;
}
