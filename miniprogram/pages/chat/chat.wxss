/* 创建角色 - AI对话页面样式（银色灰） */
page {
  height: 100%;
  overflow: hidden;
}

.page-container {
  height: 100%;
  background: linear-gradient(180deg, #f7f8fa 0%, #eef0f3 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部导航栏 */
.navbar {
  background: rgba(255, 255, 255, 0.92);
  padding: 88rpx 32rpx 24rpx;
  box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(229, 231, 235, 0.7);
}

/* navbar 占位，防止内容被固定导航栏遮挡 */
.navbar-placeholder {
  height: 184rpx; /* 88rpx padding-top + 72rpx content + 24rpx padding-bottom */
}

.nav-back {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5e7eb;
  background: rgba(255, 255, 255, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(17, 24, 39, 0.1);
}

.navbar-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

.nav-confirm {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.18);
}

.nav-confirm:active {
  transform: scale(0.95);
}

/* 聊天消息区域 */
.chat-container {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 0;
  overflow: hidden;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.bottom-placeholder {
  height: 200rpx;
}

/* 消息气泡 */
.message {
  display: flex;
  gap: 24rpx;
  max-width: 85%;
}

/* 仅新消息才播放入场动画（通过 class 控制） */
.message-animate {
  animation: slideIn 0.25s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* AI 消息（左侧） */
.message-ai {
  align-self: flex-start;
}

.message-avatar {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e5e7eb 0%, #9ca3af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #111827;
  font-size: 22rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 8rpx 18rpx rgba(17, 24, 39, 0.12);
}

.message-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-width: 0;
  flex: 1;
}

.message-bubble {
  padding: 24rpx 32rpx;
  border-radius: 32rpx;
  line-height: 1.6;
  font-size: 30rpx;
  word-break: break-word;
  /* 防止文字增长时气泡闪烁 */
  will-change: contents;
  contain: layout style;
}

.message-ai .message-bubble {
  background: rgba(255, 255, 255, 0.95);
  color: #1f2937;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 6rpx 18rpx rgba(17, 24, 39, 0.08);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.typing-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #6b7280;
}

/* 用户消息（右侧） */
.message-user {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.message-user .message-avatar {
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  color: #f9fafb;
}

.message-user .message-bubble {
  background: linear-gradient(135deg, #4b5563 0%, #1f2937 100%);
  color: #f9fafb;
  border-bottom-right-radius: 8rpx;
}

/* 图片消息 */
.message-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.message-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 24rpx;
  overflow: hidden;
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

/* 底部输入栏 */
.input-container {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  transition: bottom 0.2s ease;
  background: rgba(255, 255, 255, 0.96);
  padding: 16rpx 20rpx;
  border-radius: 48rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.12);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.action-btn:active {
  background: #e5e7eb;
}

.input-wrapper {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  border-radius: 28rpx;
}

.chat-input {
  width: 100% !important;
  height: 56rpx;
  padding: 14rpx 28rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 28rpx;
  font-size: 24rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background: #f9fafb !important;
  outline: none;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.send-btn:active {
  transform: scale(0.95);
}

/* 悬浮确认按钮 */
.floating-confirm-btn {
  position: fixed;
  bottom: 160rpx;
  left: 32rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.18);
  z-index: 100;
}

.floating-confirm-btn:active {
  transform: scale(0.95);
}