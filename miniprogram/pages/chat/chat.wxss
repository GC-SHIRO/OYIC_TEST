/* 创建角色 - AI对话页面样式（银色灰） */
page {
  height: 100%;
  overflow: hidden;
}

.page-container {
  width: 100%;
  height: 100%;
  --color: #E1E1E1;
  background-color: #F3F3F3;
  background-image: linear-gradient(0deg, transparent 24%, var(--color) 25%, var(--color) 26%, transparent 27%,transparent 74%, var(--color) 75%, var(--color) 76%, transparent 77%,transparent), 
      linear-gradient(90deg, transparent 24%, var(--color) 25%, var(--color) 26%, transparent 27%,transparent 74%, var(--color) 75%, var(--color) 76%, transparent 77%,transparent);
  background-size: 55px 55px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部导航栏 */
.navbar {
  background: rgba(255, 255, 255, 0.92);
  padding: 88rpx 32rpx 24rpx;
  box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(229, 231, 235, 0.7);
}



.nav-back {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5e7eb;
  background: rgba(255, 255, 255, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(17, 24, 39, 0.1);
}

.navbar-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

.nav-confirm {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.18);
}

.nav-confirm:active {
  transform: scale(0.95);
}

/* 聊天消息区域 */
.chat-container {
  flex: 1;
  padding: 184rpx 32rpx 0;
  padding-bottom: 0;
  overflow: hidden;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding-top: 56rpx;
}

.bottom-placeholder {
  height: 200rpx;
}

/* 消息气泡 */
.message {
  display: flex;
  gap: 24rpx;
  max-width: 85%;
}

/* 仅新消息才播放入场动画（通过 class 控制） */
.message-animate {
  animation: slideIn 0.25s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* AI 消息（左侧） */
.message-ai {
  align-self: flex-start;
}

.message-avatar {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e5e7eb 0%, #9ca3af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #111827;
  font-size: 22rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 8rpx 18rpx rgba(17, 24, 39, 0.12);
}

.message-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-width: 0;
  flex: 1;
}

.message-bubble {
  padding: 24rpx 32rpx;
  border-radius: 32rpx;
  line-height: 1.6;
  font-size: 25rpx;
  word-break: break-word;
  /* 防止文字增长时气泡闪烁 */
  will-change: contents;
  contain: layout style;
}

.message-ai .message-bubble {
  background: rgba(255, 255, 255, 0.95);
  color: #1f2937;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 6rpx 18rpx rgba(17, 24, 39, 0.08);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.typing-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #6b7280;
}

.pending-text-wrap {
  display: inline-block;
}

.pending-text {
  display: inline-block;
}

@keyframes text-fade {
  0% {
    opacity: 0;
    transform: translateY(-8rpx);
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户消息（右侧） */
.message-user {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.message-user .message-avatar {
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  color: #f9fafb;
}

/* 用户消息内容靠右对齐 */
.message-user .message-content {
  align-items: flex-end;
}

.message-user .message-bubble {
  background: linear-gradient(135deg, #4b5563 0%, #1f2937 100%);
  color: #f9fafb;
  border-bottom-right-radius: 8rpx;
  /* 用户消息气泡宽度自适应文字内容，避免与图片对齐导致空白 */
  width: fit-content;
  max-width: 100%;
}

/* 图片消息 */
.message-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.message-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 24rpx;
  overflow: hidden;
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

/* 底部输入栏 */
.input-container {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  transition: bottom 0.2s ease;
  background: rgba(255, 255, 255, 0.96);
  padding: 16rpx 20rpx;
  border-radius: 48rpx;
  display: flex;
  gap: 16rpx;
  align-items: flex-end;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.12);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
}

.action-btn:active {
  background: #e5e7eb;
}

.image-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #ef4444;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-wrapper {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  border-radius: 28rpx;
}

.chat-input {
  width: 100% !important;
  min-height: 56rpx;
  max-height: 200rpx;
  padding: 20rpx 28rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 28rpx;
  font-size: 24rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background: #f9fafb !important;
  outline: none;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.send-btn:active {
  transform: scale(0.95);
}

/* 悬浮确认按钮 */
.floating-confirm-btn {
  position: fixed;
  bottom: 160rpx;
  left: 32rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.18);
  z-index: 100;
}

.floating-confirm-btn:active {
  transform: scale(0.95);
}

/* Markdown 消息样式 */
.message-bubble t-chat-markdown {
  display: block;
  width: 100%;
}

/* 覆盖 Markdown 内部样式，适配气泡样式 */
.message-ai .message-bubble t-chat-markdown {
  color: inherit;
  font-size: inherit;
  line-height: inherit;
}

/* Markdown 代码块样式 */
.message-bubble t-chat-markdown ::deep code {
  background: rgba(0, 0, 0, 0.05);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  font-family: 'Courier New', monospace;
  font-size: 26rpx;
}

.message-bubble t-chat-markdown ::deep pre {
  background: rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  border-radius: 12rpx;
  overflow-x: auto;
  margin: 16rpx 0;
}

.message-bubble t-chat-markdown ::deep pre code {
  background: none;
  padding: 0;
}

/* Markdown 链接样式 */
.message-bubble t-chat-markdown ::deep a {
  color: #0052d9;
  text-decoration: underline;
}

/* Markdown 列表样式 */
.message-bubble t-chat-markdown ::deep ul,
.message-bubble t-chat-markdown ::deep ol {
  padding-left: 40rpx;
  margin: 16rpx 0;
}

/* Markdown 标题样式 */
.message-bubble t-chat-markdown ::deep h1,
.message-bubble t-chat-markdown ::deep h2,
.message-bubble t-chat-markdown ::deep h3 {
  font-weight: bold;
  margin: 20rpx 0 12rpx;
}

.message-bubble t-chat-markdown ::deep h1 {
  font-size: 36rpx;
}

.message-bubble t-chat-markdown ::deep h2 {
  font-size: 32rpx;
}

.message-bubble t-chat-markdown ::deep h3 {
  font-size: 28rpx;
}

/* Markdown 引用样式 */
.message-bubble t-chat-markdown ::deep blockquote {
  border-left: 4rpx solid #e5e7eb;
  padding-left: 20rpx;
  margin: 16rpx 0;
  color: #6b7280;
}