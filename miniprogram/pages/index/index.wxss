/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f7f8fa 0%, #eef0f3 100%);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding-top: 160rpx;
  gap: 24rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #6b7280;
  width: 80%;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.08);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.userinfo-avatar {
  overflow: hidden;
  width: 144rpx;
  height: 144rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #e5e7eb;
}

.usermotto {
  margin-top: 120rpx;
}

.user-motto {
  color: #4b5563;
}

.avatar-wrapper {
  padding: 0;
  width: 112rpx !important;
  height: 112rpx !important;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 36rpx;
  background: #f3f4f6;
}

.avatar {
  display: block;
  width: 112rpx;
  height: 112rpx;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16rpx 0;
  box-sizing: border-box;
  border-top: 2rpx solid rgba(229, 231, 235, 0.9);
  border-bottom: 2rpx solid rgba(229, 231, 235, 0.9);
  color: #111827;
}

.nickname-label {
  width: 140rpx;
  color: #6b7280;
}

.nickname-input {
  flex: 1;
  color: #111827;
}