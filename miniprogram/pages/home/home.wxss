/* 首页 - 角色卡中心样式（银色灰） */
.page-container {
  width: 100%;
  height: 100vh;
  --color: #E1E1E1;
  background-color: #F3F3F3;
  background-image: linear-gradient(0deg, transparent 24%, var(--color) 25%, var(--color) 26%, transparent 27%,transparent 74%, var(--color) 75%, var(--color) 76%, transparent 77%,transparent), 
      linear-gradient(90deg, transparent 24%, var(--color) 25%, var(--color) 26%, transparent 27%,transparent 74%, var(--color) 75%, var(--color) 76%, transparent 77%,transparent);
  background-size: 55px 55px;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

@keyframes riseIn {
  0% {
    transform: translateY(16rpx);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 顶部导航栏 */
.navbar {
  background: linear-gradient(to bottom, rgba(243, 243, 243, 0.95) 0%, rgba(243, 243, 243, 0.6) 60%, rgba(243, 243, 243, 0) 100%);
  padding: 110rpx 38rpx 32rpx;
  border-bottom: none;
  box-shadow: none;
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.navbar-title {
  font-size: 54rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

@keyframes shrinkIn {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.94);
  }
}

@keyframes expandOut {
  0% {
    transform: scale(0.94);
  }
  100% {
    transform: scale(1);
  }
}

/* 角色卡片滚动容器 */
.cards-container {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cards-scroll {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 50rpx 0 230rpx;
  box-sizing: border-box;
}

/* 角色卡片 */
.character-card {
  width: 500rpx;
  height: 950rpx;
  border-radius: 64rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  margin: 40rpx 0 40rpx 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(17, 24, 39, 0.10);
  background: rgba(255, 255, 255, 0.92);
  border: 2rpx solid rgba(226, 232, 240, 0.8);
  animation: riseIn 420ms ease-out both;
  transition: transform 150ms ease, box-shadow 150ms ease;
}

.delete-mode .character-card {
  transform: scale(0.94);
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.12);
  animation: shrinkIn 160ms ease-out forwards, breathe 2s ease-in-out 160ms infinite;
}

.delete-exit .character-card {
  transform: scale(1);
  animation: expandOut 180ms ease-out both;
}

.delete-btn {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #ef4444;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 22rpx rgba(239, 68, 68, 0.35);
  z-index: 2;
}

.delete-icon {
  color: #ffffff;
  font-size: 36rpx;
  line-height: 1;
  margin-top: -2rpx;
}
