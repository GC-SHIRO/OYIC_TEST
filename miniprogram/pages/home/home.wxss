}
.exit-edit-fab {
  position: fixed;
  left: 50%;
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 12rpx 26rpx rgba(17, 24, 39, 0.12);
  z-index: 1000;
}

.character-card:last-child {
  margin-right: 32rpx;
}

.character-card:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 24rpx rgba(17, 24, 39, 0.12);
}

/* 已完成的卡片 */
.card-completed {
  background: linear-gradient(160deg, #f9fafb 0%, #e5e7eb 65%, #cbd5e1 100%);
}

.card-image {
  width: 100%;
  height: 560rpx;
}

.card-info {
  padding: 32rpx 36rpx 36rpx;
  color: #111827;
}

.card-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  white-space: normal;
}

.card-tag {
  margin-top: 16rpx;
}

/* 未完成的卡片 */
.card-incomplete {
  background: linear-gradient(160deg, #f5f6f7 0%, #d7dce2 100%);
}

.card-blur-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.65);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 64rpx;
}

.incomplete-label {
  color: #6b7280;
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(17, 24, 39, 0.08);
}

/* 新建卡片 */
.card-new {
  background: linear-gradient(135deg, #ffffff 0%, #eef0f3 100%);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #cbd5e1;
}

.new-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes breathe {
  0%, 100% {
    transform: scale(0.94);
    box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.12);
  }
  50% {
    transform: scale(0.97);
    box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.18);
  }
}