/* 首页 - 多功能主页样式 */
.page-container {
  width: 100%;
  height: 100vh;
  --color: #E1E1E1;
  background-color: #F3F3F3;
  background-image: linear-gradient(0deg, transparent 24%, var(--color) 25%, var(--color) 26%, transparent 27%,transparent 74%, var(--color) 75%, var(--color) 76%, transparent 77%,transparent), 
      linear-gradient(90deg, transparent 24%, var(--color) 25%, var(--color) 26%, transparent 27%,transparent 74%, var(--color) 75%, var(--color) 76%, transparent 77%,transparent);
  background-size: 55px 55px;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

@keyframes riseIn {
  0% {
    transform: translateY(16rpx);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 顶部导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to bottom, rgba(243, 243, 243, 0.95) 0%, rgba(243, 243, 243, 0.6) 60%, rgba(243, 243, 243, 0) 100%);
  padding: 110rpx 38rpx 24rpx;
  border-bottom: none;
  box-shadow: none;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.navbar-title {
  font-size: 54rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

@keyframes shrinkIn {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.94);
  }
}

@keyframes expandOut {
  0% {
    transform: scale(0.94);
  }
  100% {
    transform: scale(1);
  }
}

/* 主滚动区域 */
.main-scroll {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin-top: 190rpx;
  scroll-behavior: smooth;
}

/* ============= 角色卡部分样式 ============= */

.section-characters {
  min-height: auto;
  padding: 12rpx 0 16rpx;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 12rpx 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

.loading-hint {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6b7280;
}

/* 角色卡片滚动容器 */
.cards-container {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 680rpx;
}

.cards-scroll {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 12rpx 0 20rpx;
  box-sizing: border-box;
}

/* 角色卡片 */
.character-card {
  width: 500rpx;
  height: 640rpx;
  border-radius: 64rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  margin: 16rpx 0 16rpx 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(17, 24, 39, 0.10);
  background: rgba(255, 255, 255, 0.92);
  border: 2rpx solid rgba(226, 232, 240, 0.8);
  animation: riseIn 420ms ease-out both;
  transition: transform 150ms ease, box-shadow 150ms ease;
}

.delete-mode .character-card {
  transform: scale(0.94);
  box-shadow: 0 10rpx 26rpx rgba(17, 24, 39, 0.12);
  animation: shrinkIn 160ms ease-out both;
}

.delete-exit .character-card {
  transform: scale(1);
  animation: expandOut 180ms ease-out both;
}

.delete-btn {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #ef4444;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 22rpx rgba(239, 68, 68, 0.35);
  z-index: 2;
}

.delete-icon {
  color: #ffffff;
  font-size: 36rpx;
  line-height: 1;
  margin-top: -2rpx;
}

.character-card:last-child {
  margin-right: 32rpx;
}

.character-card:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 24rpx rgba(17, 24, 39, 0.12);
}

/* 已完成的卡片 */
.card-completed {
  background: linear-gradient(160deg, #f9fafb 0%, #e5e7eb 65%, #cbd5e1 100%);
}

.card-image {
  width: 100%;
  height: 340rpx;
}

.card-info {
  padding: 20rpx 28rpx 20rpx;
  color: #111827;
}

.card-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  white-space: normal;
}

.card-tag {
  margin-top: 16rpx;
}

/* 未完成的卡片 */
.card-incomplete {
  background: linear-gradient(160deg, #f5f6f7 0%, #d7dce2 100%);
}

.card-blur-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.65);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 64rpx;
}

.incomplete-label {
  color: #6b7280;
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(17, 24, 39, 0.08);
}

/* 新建卡片 */
.card-new {
  background: linear-gradient(135deg, #ffffff 0%, #eef0f3 100%);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #cbd5e1;
}

.new-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ============= Feed 部分样式 ============= */

.section-feed {
  padding: 24rpx 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
  border-radius: 48rpx 48rpx 0 0;
  margin-top: 12rpx;
}

.feed-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feed-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.85);
  border: 2rpx solid rgba(226, 232, 240, 0.6);
  box-shadow: 0 8rpx 20rpx rgba(17, 24, 39, 0.06);
  transition: all 150ms ease;
  cursor: pointer;
}

.feed-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(17, 24, 39, 0.08);
}

.feed-badge {
  min-width: 60rpx;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  text-align: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.feed-content {
  flex: 1;
}

.feed-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.feed-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
}

.feed-arrow {
  margin-left: 12rpx;
  flex-shrink: 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  color: #9ca3af;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 退出删除模式按钮 */
.exit-edit-fab {
  position: fixed;
  left: 50%;
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 12rpx 26rpx rgba(17, 24, 39, 0.12);
  z-index: 1000;
}
