.page-container {
  --page-top-gap: 100rpx;
  min-height: 100vh;
  padding: 0 24rpx 120rpx;
  padding-top: calc(var(--page-top-gap) + env(safe-area-inset-top));
  background: radial-gradient(120% 120% at 20% 0%, #f7f8fa 0%, #f0f2f5 45%, #eef0f3 100%);
  color: #111827;
  font-family: "PingFang SC", "MiSans", "Noto Sans SC", "Source Han Sans SC", sans-serif;
}

.navbar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.nav-back {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5e7eb;
  background: rgba(255, 255, 255, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(17, 24, 39, 0.1);
}

.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.balance-card {
  background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 60%, #cbd5e1 100%);
  border-radius: 32rpx;
  padding: 24rpx 24rpx 22rpx;
  box-shadow: 0 20rpx 40rpx rgba(17, 24, 39, 0.12);
  position: relative;
  overflow: hidden;
}

.balance-card::after {
  content: "";
  position: absolute;
  right: -60rpx;
  top: -80rpx;
  width: 280rpx;
  height: 280rpx;
  background: radial-gradient(closest-side, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0));
  z-index: 0;
}

.balance-label {
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.6);
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
}

.balance-value {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin: 18rpx 0 10rpx;
  position: relative;
  z-index: 1;
}

.balance-number {
  font-size: 56rpx;
  font-weight: 700;
}

.balance-unit {
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.6);
}

.balance-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.6);
  position: relative;
  z-index: 1;
}

.balance-link {
  font-weight: 600;
  color: #111827;
}

.section {
  margin-top: 28rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.packs {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  width: 100%;
}

.pack {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 22rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.08);
  position: relative;
}

.pack:nth-child(2) {
  border: 2rpx solid rgba(148, 163, 184, 0.7);
  background: linear-gradient(180deg, #f9fafb, #ffffff 60%);
}

.pack.selected {
  border: 2rpx solid #374151;
  box-shadow: 0 18rpx 36rpx rgba(17, 24, 39, 0.16);
}

.pack-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 20rpx;
  color: #4b5563;
  background: rgba(203, 213, 225, 0.5);
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.pack-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #374151;
}

.pack-points {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.pack-bonus {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.custom-pack {
  margin-top: 20rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx;
  border: 2rpx dashed rgba(148, 163, 184, 0.7);
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.06);
}

.custom-pack.selected {
  border: 2rpx solid #374151;
  box-shadow: 0 18rpx 36rpx rgba(17, 24, 39, 0.16);
}

.custom-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.custom-rate {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.custom-input-row {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.custom-input {
  flex: 1;
  height: 72rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  background: rgba(249, 250, 251, 0.9);
  font-size: 24rpx;
  color: #111827;
}

.custom-points {
  font-size: 22rpx;
  color: #111827;
  font-weight: 600;
}

.custom-tip {
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.cta {
  margin-top: 24rpx;
  width: 100%;
  border: none;
  border-radius: 24rpx;
  padding: 18rpx 16rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%);
  box-shadow: 0 18rpx 36rpx rgba(17, 24, 39, 0.2);
}

.rules {
  margin-top: 28rpx;
  background: rgba(255, 255, 255, 0.75);
  border: 2rpx dashed #e5e7eb;
  border-radius: 24rpx;
  padding: 20rpx;
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.7;
}

.rules-title {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 8rpx;
}

.activity-label {
  margin-top: 28rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.activity-banner {
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(249, 250, 251, 0.95), rgba(226, 232, 240, 0.9));
  border: 2rpx solid rgba(203, 213, 225, 0.8);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.1);
}

.activity-text {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.activity-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #111827;
}

.activity-subtitle {
  font-size: 22rpx;
  color: #6b7280;
}

.activity-action {
  font-size: 22rpx;
  font-weight: 600;
  color: #374151;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(148, 163, 184, 0.7);
  background: rgba(255, 255, 255, 0.8);
}
