/* 预览角色卡页面样式（银色灰） */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f8fa 0%, #eef0f3 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.navbar {
  background: rgba(255, 255, 255, 0.92);
  padding: 88rpx 32rpx 24rpx;
  box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(229, 231, 235, 0.8);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.nav-back {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5e7eb;
  background: rgba(255, 255, 255, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(17, 24, 39, 0.1);
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.nav-placeholder {
  width: 72rpx;
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 200rpx 32rpx 0;
  box-sizing: border-box;
}

.bottom-placeholder {
  height: 200rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* 角色卡片预览 */
.character-preview {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 18rpx 40rpx rgba(17, 24, 39, 0.12);
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.preview-header {
  background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 60%, #cbd5e1 100%);
  padding: 64rpx 48rpx;
  color: #111827;
  text-align: center;
  position: relative;
}

.preview-header-tools {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.intro-edit-btn {
  font-size: 22rpx;
  padding: 6rpx 18rpx;
}

.character-name {
  font-size: 44rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.character-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.character-intro {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-top: 8rpx;
}

.preview-body {
  padding: 48rpx;
}

.info-section {
  margin-bottom: 16rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.section-title {
  font-size: 22rpx;
  font-weight: 700;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.section-edit-btn {
  font-size: 24rpx;
  color: #4b5563;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border-radius: 24rpx;
  border: 2rpx solid #d1d5db;
}

/* 输入方式分类（统一改样式时优先改这里）
 * input-short: 短输入（姓名/性别/物种/关系角色等）
 * input-long:  长输入（能力名/较长单行关系描述）
 * input-paragraph: 段落输入（简介/性格/背景/故事线/描述）
 * input-number: 数字输入（六维图分值）
 * input-tag: tag 输入（性格标签）
 */
.input-short,
.input-long {
  font-size: 28rpx;
  color: #4b5563;
  padding: 8rpx 0;
  min-width: 0;
  border-bottom: 3rpx solid #9ca3af;
}

.input-paragraph {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.8;
  padding: 24rpx 28rpx;
  background: #f9fafb;
  border-radius: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  width: 100%;
  box-sizing: border-box;
  min-height: 120rpx;
}

.input-number {
  font-size: 26rpx;
  font-weight: 700;
  color: #111827;
  width: 80rpx;
  text-align: center;
  padding: 4rpx 8rpx;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  border-radius: 12rpx;
}

.input-tag {
  font-size: 26rpx;
  color: #111827;
  padding: 8rpx 16rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  border-radius: 20rpx;
  min-width: 120rpx;
}

/* 编辑模式下的输入框：底部加深，便于区分。
 * TODO 深色模式：此处 border-bottom 需切换为浅色系（如 rgba(255,255,255,0.3)）
 */
.info-input,
.attr-input {
  flex: 1;
  font-size: 28rpx;
  color: #4b5563;
  padding: 8rpx 0;
  min-width: 0;
  border-bottom: 3rpx solid #9ca3af;
}

.tag-input {
  font-size: 26rpx;
  color: #111827;
  padding: 8rpx 16rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  border-radius: 20rpx;
  min-width: 120rpx;
}

.personality-tag-edit {
  padding: 10rpx 28rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 40rpx;
}

.personality-tag-add {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border: 2rpx dashed #9ca3af;
  border-radius: 40rpx;
  font-size: 36rpx;
  color: #6b7280;
  font-weight: 600;
}

.appearance-detail-input,
.long-text-input {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.8;
  padding: 24rpx 28rpx;
  background: #f9fafb;
  border-radius: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  width: 100%;
  box-sizing: border-box;
  min-height: 120rpx;
}

.ability-input {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  padding: 8rpx 0;
  margin-bottom: 8rpx;
  display: block;
  width: 100%;
  border-bottom: 3rpx solid #9ca3af;
}

.ability-desc-input {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  padding: 16rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 80rpx;
}

.rel-input {
  font-size: 28rpx;
  color: #111827;
  padding: 8rpx 0;
  min-width: 100rpx;
  border-bottom: 3rpx solid #9ca3af;
}

.rel-input.flex-1 {
  flex: 1;
  min-width: 0;
}

.radar-legends-visible {
  display: grid !important;
  margin-top: 24rpx;
}

.radar-input-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.radar-input {
  font-size: 26rpx;
  font-weight: 700;
  color: #111827;
  width: 80rpx;
  text-align: center;
  padding: 4rpx 8rpx;
  border: 2rpx solid #e5e7eb;
  border-bottom: 3rpx solid #9ca3af;
  border-radius: 12rpx;
}

.radar-hint {
  font-size: 22rpx;
  color: #9ca3af;
}

.section-content {
  font-size: 28rpx;
  color: #111827;
  line-height: 1.6;
}

.info-item {
  margin-bottom: 8rpx;
}

.info-label {
  font-weight: 700;
  color: #4b5563;
}

.info-value {
  color: #6b7280;
}

/* 分割线 */
.section-divider {
  height: 2rpx;
  background: linear-gradient(90deg, #e5e7eb 0%, transparent 100%);
  margin-bottom: 32rpx;
}

/* 性格标签 */
.personality-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.personality-tag {
  padding: 10rpx 28rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #d1d5db 100%);
  color: #111827;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 2rpx solid #e5e7eb;
}

/* 外观描述 */
.appearance-attrs {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.appearance-attr {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.attr-color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.hair-dot {
  background: linear-gradient(135deg, #c0d0e8, #e8e8f0);
}

.eye-dot {
  background: linear-gradient(135deg, #d4a017, #c48a1a);
}

.attr-label {
  font-size: 26rpx;
  color: #9ca3af;
  font-weight: 600;
  white-space: nowrap;
}

.attr-value {
  font-size: 28rpx;
  color: #4b5563;
  font-weight: 500;
}

.appearance-detail-wrap {
  margin-top: 0;
}

.appearance-detail {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.7;
  padding: 24rpx 28rpx;
  background: #f9fafb;
  border-radius: 24rpx;
  border-left: 6rpx solid #9ca3af;
  display: block;
}

/* 长文本段落 */
.long-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.8;
  white-space: pre-wrap;
  display: block;
}

/* 特殊能力 */
.ability-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ability-item {
  padding: 24rpx 28rpx;
  background: #f9fafb;
  border-radius: 24rpx;
  border-left: 6rpx solid #9ca3af;
}

.ability-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
  display: block;
}

.ability-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
}

/* 关系网 */
.relationship-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.relationship-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 28rpx;
  background: #f9fafb;
  border-radius: 24rpx;
}

.rel-character {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  white-space: nowrap;
}

.rel-arrow {
  color: #9ca3af;
  font-size: 32rpx;
  flex-shrink: 0;
}

.rel-desc {
  font-size: 26rpx;
  color: #6b7280;
  flex: 1;
  min-width: 0;
}

/* 性格六维图 */
.radar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.radar-canvas {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 0;
}

.radar-legends {
  display: none;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16rpx 32rpx;
  width: 100%;
}

.radar-legend-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  font-size: 26rpx;
}

.legend-label {
  color: #6b7280;
}

.legend-value {
  font-weight: 700;
  color: #111827;
  font-size: 28rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  background: rgba(255, 255, 255, 0.96);
  padding: 32rpx;
  border-radius: 48rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.12);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.btn-secondary {
  flex: 1;
}

.btn-primary {
  flex: 1;
}

/* TDesign组件样式覆盖 */
.action-bar .t-button {
  border-radius: 48rpx !important;
  height: 96rpx !important;
}

.action-bar .t-button--primary {
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%) !important;
  border: none !important;
}