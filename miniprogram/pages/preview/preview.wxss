/* 预览角色卡页面样式（银色灰） */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f8fa 0%, #eef0f3 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.navbar {
  background: rgba(255, 255, 255, 0.92);
  padding: 88rpx 32rpx 24rpx;
  box-shadow: 0 16rpx 36rpx rgba(17, 24, 39, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(229, 231, 235, 0.8);
}

.nav-back {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f4f6;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.nav-placeholder {
  width: 64rpx;
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 40rpx 32rpx 0;
  box-sizing: border-box;
}

.bottom-placeholder {
  height: 200rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* 模板选择器 */
.template-selector {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 14rpx 30rpx rgba(17, 24, 39, 0.08);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.template-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 24rpx;
}

.template-options {
  display: flex;
  white-space: nowrap;
}

.template-option {
  display: inline-block;
  padding: 16rpx 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 24rpx;
  transition: all 0.2s;
  background: #f9fafb;
}

.template-option.active {
  border-color: #6b7280;
  background: linear-gradient(135deg, #f3f4f6 0%, #d1d5db 100%);
  color: #111827;
}

/* 角色卡片预览 */
.character-preview {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 18rpx 40rpx rgba(17, 24, 39, 0.12);
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.preview-header {
  background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 60%, #cbd5e1 100%);
  padding: 64rpx 48rpx;
  color: #111827;
  text-align: center;
}

.character-name {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.character-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.preview-body {
  padding: 48rpx;
}

.info-section {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #9ca3af;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.section-content {
  font-size: 30rpx;
  color: #111827;
  line-height: 1.6;
}

.info-item {
  margin-bottom: 8rpx;
}

.info-label {
  font-weight: 700;
  color: #4b5563;
}

.info-value {
  color: #6b7280;
}

.section-text {
  display: block;
  white-space: pre-wrap;
}

/* 能力标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.ability-tag {
  margin-right: 0 !important;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  background: rgba(255, 255, 255, 0.96);
  padding: 32rpx;
  border-radius: 48rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 16rpx 32rpx rgba(17, 24, 39, 0.12);
  border: 2rpx solid rgba(229, 231, 235, 0.9);
}

.btn-secondary {
  flex: 1;
}

.btn-primary {
  flex: 1;
}

/* TDesign组件样式覆盖 */
.action-bar .t-button {
  border-radius: 48rpx !important;
  height: 96rpx !important;
}

.action-bar .t-button--primary {
  background: linear-gradient(135deg, #9ca3af 0%, #4b5563 100%) !important;
  border: none !important;
}